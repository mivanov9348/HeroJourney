@model ShopViewModel
<link href="~/css/Shop.css" rel="stylesheet" />

<script src='https://kit.fontawesome.com/a076d05399.js' crossorigin='anonymous'></script>

@{
    var color = "white";
}

<a asp-action="MainMenu" asp-controller="Home" style="font-size:40px;color:red;font-family:Ancient">Main Menu</a>


<div style="display:flex;text-align:center;">
    <table class="table table-dark" style="margin-left:10px;width:100px;margin-top:100px">
        <thead>
            <tr>
                <th colspan="2">@Model.HeroName</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <td>Coins</td>
                <td>@Model.HeroCoins</td>
            </tr>
            <tr>
                <td>Health</td>
                <td>@Model.HeroHealth</td>
            </tr>
            <tr>
                <td>Attack</td>
                <td>@Model.HeroAttack</td>
            </tr>
            <tr>
                <td>Defense</td>
                <td>@Model.HeroDefense</td>
            </tr>
        </tbody>
    </table>

    <form method="get">
        <table class="table table-dark" style="margin-left: 100px; margin-top: 100px">
            <thead>
                <tr>
                    <th scope="col">Product</th>
                    <th scope="col">Price</th>
                    <th scope="col">Description</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Items)
                {
                    @if (item.IsSpecial == true)
                    {
                        color = "red";
                    }
                    else
                    {
                        color = "black";
                    }

                    <tr style="background-color:@color" class="standInfo">
                        <td>@item.Name</td>
                        <td>@item.Price</td>
                        <td>@item.Description</td>
                        <td><input type="hidden" asp-for="@item.Id" /></td>
                        <td> @Html.ActionLink("Buy", "Shop", new { id = item.Id }, new { @class = "btn btn-danger" })</td>
                    </tr>
                }
            </tbody>
        </table>
    </form>

</div>